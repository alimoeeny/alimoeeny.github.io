---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class="photos-page-container">
		<section class="page-header">
			<h1>Photography</h1>
			<p class="subtitle">A collection of moments captured through my lens</p>
		</section>

		<section class="photos-section">
			<div class="photos-grid">
				<!-- Row 1 -->
				<div class="photo-item">
					<img src="https://source.unsplash.com/random/800x600?nature" alt="Nature photograph" class="grayscale" />
					<div class="photo-overlay">
						<h3>Morning Light</h3>
						<p>March 2, 2025</p>
					</div>
				</div>
				<div class="photo-item">
					<img src="https://source.unsplash.com/random/800x600?architecture" alt="Architecture photograph" class="grayscale" />
					<div class="photo-overlay">
						<h3>Urban Geometry</h3>
						<p>February 28, 2025</p>
					</div>
				</div>
				<div class="photo-item">
					<img src="https://source.unsplash.com/random/800x600?portrait" alt="Portrait photograph" class="grayscale" />
					<div class="photo-overlay">
						<h3>Contemplation</h3>
						<p>February 25, 2025</p>
					</div>
				</div>
				
				<!-- Row 2 -->
				<div class="photo-item">
					<img src="https://source.unsplash.com/random/800x600?street" alt="Street photograph" class="grayscale" />
					<div class="photo-overlay">
						<h3>City Rhythm</h3>
						<p>February 20, 2025</p>
					</div>
				</div>
				<div class="photo-item">
					<img src="https://source.unsplash.com/random/800x600?landscape" alt="Landscape photograph" class="grayscale" />
					<div class="photo-overlay">
						<h3>Horizon Lines</h3>
						<p>February 15, 2025</p>
					</div>
				</div>
				<div class="photo-item">
					<img src="https://source.unsplash.com/random/800x600?abstract" alt="Abstract photograph" class="grayscale" />
					<div class="photo-overlay">
						<h3>Patterns</h3>
						<p>February 10, 2025</p>
					</div>
				</div>
				
				<!-- Row 3 -->
				<div class="photo-item">
					<img src="https://source.unsplash.com/random/800x600?minimal" alt="Minimal photograph" class="grayscale" />
					<div class="photo-overlay">
						<h3>Negative Space</h3>
						<p>February 5, 2025</p>
					</div>
				</div>
				<div class="photo-item">
					<img src="https://source.unsplash.com/random/800x600?shadow" alt="Shadow photograph" class="grayscale" />
					<div class="photo-overlay">
						<h3>Light & Shadow</h3>
						<p>January 30, 2025</p>
					</div>
				</div>
				<div class="photo-item">
					<img src="https://source.unsplash.com/random/800x600?texture" alt="Texture photograph" class="grayscale" />
					<div class="photo-overlay">
						<h3>Textures</h3>
						<p>January 25, 2025</p>
					</div>
				</div>
				
				<!-- Row 4 -->
				<div class="photo-item">
					<img src="https://source.unsplash.com/random/800x600?macro" alt="Macro photograph" class="grayscale" />
					<div class="photo-overlay">
						<h3>Details</h3>
						<p>January 20, 2025</p>
					</div>
				</div>
				<div class="photo-item">
					<img src="https://source.unsplash.com/random/800x600?silhouette" alt="Silhouette photograph" class="grayscale" />
					<div class="photo-overlay">
						<h3>Silhouettes</h3>
						<p>January 15, 2025</p>
					</div>
