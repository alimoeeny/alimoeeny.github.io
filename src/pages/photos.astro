				<div class="photo-item">
					<img src="https://source.unsplash.com/random/800x600?reflection" alt="Reflection photograph" class="grayscale" />
					<div class="photo-overlay">
						<h3>Reflections</h3>
						<p>January 10, 2025</p>
					</div>
				</div>
			</div>
		</section>
	</div>
</Layout>

<style>
	.photos-page-container {
		max-width: 1200px;
		margin: 0 auto;
		padding-right: 250px; /* Accounting for sidebar */
	}

	.page-header {
		margin-bottom: 3rem;
	}

	h1 {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
		color: var(--color-dark);
	}

	.subtitle {
		font-size: 1.25rem;
		color: var(--color-medium);
		margin-bottom: 1.5rem;
		max-width: 800px;
	}

	.photos-section {
		margin-bottom: 4rem;
	}

	.photos-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 1.5rem;
	}

	.photo-item {
		position: relative;
		overflow: hidden;
		border-radius: 8px;
		box-shadow: var(--card-shadow);
		aspect-ratio: 4/3;
		cursor: pointer;
	}

	.photo-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.5s ease;
	}

	.photo-item:hover img {
		transform: scale(1.05);
	}

	.grayscale {
		filter: grayscale(100%);
	}

	.photo-overlay {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
		padding: 1.5rem;
		color: var(--color-white);
		opacity: 0;
		transform: translateY(20px);
		transition: opacity 0.3s ease, transform 0.3s ease;
	}

	.photo-item:hover .photo-overlay {
		opacity: 1;
		transform: translateY(0);
	}

	.photo-overlay h3 {
		margin: 0 0 0.5rem;
		font-size: 1.2rem;
	}

	.photo-overlay p {
		margin: 0;
		font-size: 0.9rem;
		opacity: 0.8;
	}

	/* Responsive Adjustments */
	@media (max-width: 1024px) {
		.photos-page-container {
			padding-right: 0;
		}
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 2rem;
		}

		.subtitle {
			font-size: 1.1rem;
		}

		.photos-grid {
			grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		}
	}

	@media (max-width: 480px) {
		.photos-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
